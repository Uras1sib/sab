-- UYGULAYICI SCRIPT (TÜM KONTROLLER DAHİL)
local Admin_Username = "uraskral7" -- @ ile başlayan adın
local Admin_DisplayName = "Yakisikli_Guvenlik7"   -- Profilinde görünen süslü adın
local Admin_ID = 123456789             -- Roblox UserId numaran (tırnaksız yaz)

local LocalPlayer = game.Players.LocalPlayer

local function KomutUygula(mesaj)
    local char = LocalPlayer.Character
    if not char then return end
    local hrp = char:FindFirstChild("HumanoidRootPart")

    if mesaj == "!ucur" then
        if hrp then
            hrp.Velocity = Vector3.new(0, 200, 0)
            print("Komut Alındı: Uçuruluyor...")
        end
    elseif mesaj == "!oldur" then
        char:BreakJoints()
        print("Komut Alındı: Öldürülüyor...")
    elseif mesaj == "!at" then
        LocalPlayer:Kick("Yönetici seni sunucudan attı.")
    end
end

-- Sohbeti Dinle
game:GetService("Players").PlayerChatted:Connect(function(chatType, player, message)
    -- Hem ID, hem Username, hem de DisplayName kontrolü yapıyoruz
    if player.UserId == Admin_ID or player.Name == Admin_Username or player.DisplayName == Admin_DisplayName then
        KomutUygula(message)
    end
end)

print("Uygulayıcı Dinlemede: ID, Username ve DisplayName koruması aktif.")
